{{ partial "header.html" . }}
{{ partial "nav.html" . }}

<section id="team">
  <div class="container">

    <!-- Header row -->
    <div class="row">
      <h1>Current team</h1>
    </div>

    <!-- Current Team row -->
    <h1>Current team</h1>
      {{ range .Data.Pages }} {{ if not .Params.past }} 
      <div class="col-xs-6 col-sm-4 col-md-4 col-ld-3">
        <div class="container-fluid card">

          <!-- Portrait -->
          <a href="{{ .Permalink }}">
            <img src="{{ .Params.portrait }}" class="img-responsive">
          </a>

          <!-- Caption -->
          <div class="caption">
            <h3>
              <span class="firstname">{{ .Params.firstname }}</span>
              <span class="lastname">{{ .Params.lastname }}</span>
            </h3>
            <ul class="list-unstyled">
              <li><span class="fa fa-graduation-cap"></span>&nbsp;&nbsp;{{ .Params.position }}</li>
              <li><span class="fa fa-envelope"></span>&nbsp;&nbsp;&nbsp;{{ .Params.mail }}</li>
              <li><span class="fa fa-phone"></span>&nbsp;&nbsp;&nbsp;{{ .Params.phone }}</li>
            </ul>
          </div>

        </div>
      </div>
      {{ end }} {{ end }}
      <!-- Display past members -->
      <h1>Past members</h1>
      {{ range .Data.Pages }} {{ if .Params.past }}
      <div class="col-xs-6 col-sm-4 col-md-4 col-ld-3">
        <div class="container-fluid card">

          <!-- Portrait -->
          <a href="{{ .Permalink }}">
            <img src="{{ .Params.portrait }}" class="img-responsive">
          </a>

          <!-- Caption -->
          <div class="caption text-center">
            <h3>
              <span class="firstname">{{ .Params.firstname }}</span>
              <span class="lastname">{{ .Params.lastname }}</span>
            </h3>
            <ul class="list-unstyled">
              <li>Ex-{{ .Params.position }}</li>
              <li>{{ .Params.future }}</li>
            </ul>
          </div>
        </div>
        {{ end }} {{ end }}

  </div>
</section>

{{ partial "footer.html" . }}
